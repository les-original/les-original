---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this template–it extends the base template #}

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    
    {# After the the content defined in index.md, list the blog posts in the collection #}
    <ul>
      {%- for post in collections.notions -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}><a href='{{ post.url }}'>{{ post.data.title }}</a>  — <i>Last updated {{ post.data.page.date | htmlDateString }}</i></li>
      {%- endfor -%}
      <li><a href="/notions">View all notions</a></li>
    </ul>
  </div>
</div>


